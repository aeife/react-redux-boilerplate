{
  "name": "reduxBoilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "better-npm-run test",
    "test:watch": "npm run test -- --watch",
    "build": "webpack --config ./build/webpack.config.babel.js --colors --progress",
    "build:prod": "better-npm-run build:prod",
    "deploy": "npm run test && npm run build",
    "start": "better-npm-run server",
    "debug": "better-npm-run server:debug",
    "clean": "rm -rf dist"
  },
  "betterScripts": {
    "test": {
      "command": "mocha --compilers js:babel-core/register --require ignore-styles --require ./tests/setup.js src/**/*.spec.js",
      "env": {
        "NODE_PATH": "./src"
      }
    },
    "server": {
      "command": "babel-node ./server/server.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "server:debug": {
      "command": "better-npm-run server --debugging",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build:prod": {
      "command": "webpack -p --config ./build/webpack.config.babel.js --colors --progress",
      "env": {
        "NODE_ENV": "production"
      }
    }

  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-core": "^6.4.0",
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.1",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "better-npm-run": "0.0.5",
    "chai": "^3.4.1",
    "chai-immutable": "^1.5.3",
    "connect-history-api-fallback": "^1.1.0",
    "css-loader": "^0.23.1",
    "eslint": "^1.10.3",
    "eslint-config-standard": "^4.4.0",
    "eslint-config-standard-react": "^1.2.1",
    "eslint-loader": "^1.2.0",
    "eslint-plugin-babel": "^3.0.0",
    "eslint-plugin-react": "^3.14.0",
    "eslint-plugin-standard": "^1.3.1",
    "express": "^4.13.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.8.1",
    "ignore-styles": "^1.2.0",
    "jsdom": "^7.2.2",
    "mocha": "^2.3.4",
    "nock": "^5.2.1",
    "node-fetch": "^1.3.3",
    "node-sass": "^3.4.2",
    "postcss-loader": "^0.8.0",
    "react-addons-test-utils": "^0.14.6",
    "react-transform-hmr": "^1.0.1",
    "redux-devtools": "^3.0.1",
    "redux-devtools-dock-monitor": "^1.0.1",
    "redux-devtools-log-monitor": "^1.0.1",
    "redux-mock-store": "0.0.6",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.10",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.6.0",
    "yargs": "^3.31.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.3.14",
    "history": "^1.17.0",
    "immutable": "^3.7.6",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-redux": "^4.0.6",
    "react-router": "^1.0.3",
    "redux": "^3.0.5",
    "redux-simple-router": "^1.0.2",
    "redux-thunk": "^1.0.3",
    "whatwg-fetch": "^0.10.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ],
    "plugins": [],
    "env": {
      "development": {
        "plugins": [
          [
            "react-transform",
            {
              "transforms": [
                {
                  "transform": "react-transform-hmr",
                  "imports": [
                    "react"
                  ],
                  "locals": [
                    "module"
                  ]
                }
              ]
            }
          ]
        ]
      }
    }
  }
}
